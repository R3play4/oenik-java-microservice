<db:databaseChangeLog xmlns:db="http://www.liquibase.org/xml/ns/dbchangelog"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <db:changeSet id="create-table-from-object" author="norbi">
        <db:createTable tableName="rfood">
            <db:column name="id" type="BIGINT"></db:column>
            <db:column name="name" type="varchar(255)"  ></db:column>
            <db:column name="description" type="varchar(255)"  ></db:column>
            <db:column name="price" type="int"  ></db:column>
        </db:createTable>
        <db:createIndex tableName="rfood" indexName="rfood-name">
            <db:column name="name"></db:column>
        </db:createIndex>
        <db:createIndex tableName="rfood" indexName="food-id">
            <db:column name="id"></db:column>
        </db:createIndex>
    </db:changeSet>

    <db:changeSet id="hibernate_sequences" author="norbi">
        <db:createTable tableName="hibernate_sequences">
            <db:column name="sequence_name" type="varchar(255)"  ></db:column>
            <db:column name="next_val" type="BIGINT"  ></db:column>
        </db:createTable>
    </db:changeSet>

    <db:changeSet id="init-data" author="norbi">
        <db:preConditions onFail="MARK_RAN">
            <db:sqlCheck expectedResult="0">
                SELECT count(0) FROM rfood WHERE name='teszt'
            </db:sqlCheck>
        </db:preConditions>
        <db:insert tableName="rfood">
            <db:column name="id" value="1"></db:column>
            <db:column name="name" value="Kaja2"></db:column>
            <db:column name="description" value="második bevitt kaja"></db:column>
            <db:column name="price" value="44444"></db:column>
        </db:insert>
        <db:insert tableName="rfood">
            <db:column name="id" value="2"></db:column>
            <db:column name="name" value="Kaja3"></db:column>
            <db:column name="description" value="harmadik bevitt kaja"></db:column>
            <db:column name="price" value="565656"></db:column>
        </db:insert>
        <db:insert tableName="rfood">
            <db:column name="id" value="3"></db:column>
            <db:column name="name" value="Süti"></db:column>
            <db:column name="description" value="édesség a javából"></db:column>
            <db:column name="price" value="12345"></db:column>
        </db:insert>
        <db:insert tableName="hibernate_sequences">
            <db:column name="sequence_name" value="default"></db:column>
            <db:column name="next_val" value="3"></db:column>
        </db:insert>

    </db:changeSet>




</db:databaseChangeLog>